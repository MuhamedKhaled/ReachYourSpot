<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="192dp"
    android:background="@color/accent_indago"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/dimen_16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/drawerImage_imageView"
        android:layout_width="@dimen/drawerImageDimensions"
        android:layout_height="@dimen/drawerImageDimensions"
        android:contentDescription="@string/launcher_icon"
        android:scaleType="centerCrop"
        android:src="@drawable/icon"/>

    <TextView
        android:id="@+id/drawerTitle_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/size_20sp"
        android:textStyle="bold"/>

</LinearLayout>